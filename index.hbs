<!DOCTYPE html>
<html ng-app>
<head>
  <meta charset="utf-8">
  <title>{{meta_title}}</title>

  <meta name="description" content="{{meta_description}}">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <link href='http://fonts.googleapis.com/css?family=Lustria' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Lato:100,300,400,700,900,100italic,300italic,400italic,700italic,900italic' rel='stylesheet' type='text/css'>

  {{component "font-awesome/css/font-awesome.min.css"}}
  {{component "flag-icon-css/css/flag-icon.min.css"}}
  {{component "angular-github-repo/assets/base.css"}}

  {{include "css/main.css"}}

  {{! Cache view templates }}
  {{#views}}
    <script type="text/ng-template" id="{{path}}">
      {{{markup}}}
    </script>
  {{/views}}

  {{ghost_head}}
</head>
<body class="{{body_class}}"
  ng-class="{
    'open-modal': modal,
    'home': state.name == 'home',
    'ready': ready
  }">
  <header id="site-head">
    <div id="site-head-inner">
      <h1 id="blog-profile">
        <a id="blog-title"
          ui-sref="home"
          ui-sref-opts="{reload: true}"
          ng-class="{ 'ready': ready }">
          <img src="http://www.gravatar.com/avatar/1cda89f1fbe853160953a0bb5aabe5f5?s=80" alt="Lucas">
          <span>Lucas Constantino Silva</span>
        </a>

        <ul id="social-links">
          <li><a href="//taller.net.br/#fourth" class="fa fa-taller"></a></li>
          <li><a href="//github.com/lucasconstantino" class="fa fa-github"></a></li>
          <li><a href="//twitter.com/luconsilva" class="fa fa-twitter"></a></li>
          <li><a href="//www.facebook.com/lucasconstantino" class="fa fa-facebook-square"></a></li>
          <li><a href="//plus.google.com/+LucasConstantinoSilva" class="fa fa-google-plus-square"></a></li>
        </ul>
      </h1>

      <ul id="site-navigation">
        <li data-title="\{{'SECTIONS.BLOG.NAME' | translate}}">
          <a ui-sref="blog">
            <span
              data-hover="\{{'SECTIONS.BLOG.SHORT_NAME' | translate}}">
              \{{'SECTIONS.BLOG.SHORT_NAME' | translate}}
            </span>
          </a>
        </li>
        <li data-title="\{{'SECTIONS.TALKS.NAME' | translate}}">
          <a ui-sref="talks">
            <span
              data-hover="\{{'SECTIONS.TALKS.SHORT_NAME' | translate}}">
              \{{'SECTIONS.TALKS.SHORT_NAME' | translate}}
            </span>
          </a>
        </li>
        <li data-title="\{{'SECTIONS.DEV.NAME' | translate}}">
          <a ui-sref="development">
            <span
              data-hover="\{{'SECTIONS.DEV.SHORT_NAME' | translate}}">
              \{{'SECTIONS.DEV.SHORT_NAME' | translate}}
            </span>
          </a>
        </li>
        <li class="disabled">
          <a ui-sref="projects">
            <span data-hover="Projects">Projects</span>
          </a>
        </li>
        <li class="disabled">
          <a ui-sref="ask">
            <span data-hover="Ask a Question">Ask a Question</span>
          </a>
        </li>
        <li class="disabled">
          <a ui-sref="about">
            <span data-hover="About">About</span>
          </a>
        </li>
        <li data-title="\{{'I18N.SETTINGS' | translate}}">
          <a ui-sref="language">
            <span>
              <i class="fa fa-language"></i>
            </span>
          </a>
        </li>
      </ul>
    </div>

    {{! The next line is an example of how to output the cover image that can be set in the Ghost admin area. Uncomment the line if you wish to use it. }}
    {{!-- {{#if @blog.cover}}<img src="{{@blog.cover}}" alt="Blog Cover" />{{/if}} --}}
  </header>

  <div class="wrapper">
    <!-- Main App view -->
    <main id="site-content"
      ui-view></main>

    <footer id="site-footer">
      <div class="footer-section">
        <div class="section-inner">
          <a href="{{@blog.url}}/rss/"><i class="fa fa-rss"></i> Subscribe!</a>
          <section>All content copyright <a href="/">{{@blog.title}}</a> &copy; {{date format="YYYY"}} &bull; All rights reserved.</section>
          <section>Proudly published with <a href="http://ghost.org">Ghost</a> and a bunch of <a ui-sref="development">other tools</a>.</section>
        </div>
      </div>
    </footer>
  </div>

  <div class="modal-container" ng-click="closeModal($event)"></div>

  <div id="main-loader">
    <div class="chasing-dots">
      <div class="dot1"></div>
      <div class="dot2"></div>
    </div>
  </div>

  {{! Ghost scripts }}
  {{ghost_foot}}


  {{! Asset scripts }}


  {{! Applicationg configuration }}
  <script>var config = {{config}};</script>


  {{! Vendor components }}
  {{component "jquery/dist/jquery.js"}}
  {{component "jquery-ui/jquery-ui.js"}}
  {{component "lodash/dist/lodash.js"}}
  {{component "masonry/dist/masonry.pkgd.min.js"}}

  {{component "angular/angular.js"}}
  {{component "angular-route/angular-route.js"}}
  {{component "angular-animate/angular-animate.js"}}
  {{component "angular-cookies/angular-cookies.js"}}
  {{component "angular-sanitize/angular-sanitize.js"}}

  {{component "ngstorage/ngStorage.js"}}
  {{component "angular-disqus/angular-disqus.js"}}
  {{component "angular-konami/angular-konami.js"}}
  {{component "angular-scroll/angular-scroll.js"}}
  {{component "angular-masonry/angular-masonry.js"}}
  {{component "angular-translate/angular-translate.js"}}
  {{component "angular-ui-router/release/angular-ui-router.js"}}
  {{component "angular-github-repo/angular-github-repo.js"}}


  {{! Application modules }}
  {{app "blog/module.js"}}
  {{app "blog/router.js"}}
  {{app "blog/services.js"}}
  {{app "blog/filters.js"}}
  {{app "blog/directives.js"}}
  {{app "blog/controllers.js"}}

  {{app "slides/module.js"}}
  {{app "slides/router.js"}}
  {{app "slides/services.js"}}
  {{app "slides/controllers.js"}}

  {{app "i18n/module.js"}}
  {{app "i18n/services.js"}}
  {{app "i18n/controllers.js"}}
  {{app "i18n/filters.js"}}

  {{app "development/module.js"}}
  {{app "development/services.js"}}
  {{app "development/controllers.js"}}
  {{app "development/router.js"}}


  {{! Application }}
  {{app "app.js"}}
  {{app "filters.js"}}
  {{app "directives.js"}}
  {{app "config.js"}}
  {{app "router.js"}}
  {{app "init.js"}}

  {{! Asset Scripts}}
  {{include "scripts/header.js"}}

</body>
</html>
